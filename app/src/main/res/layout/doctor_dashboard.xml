<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffd82">

    <Button
        android:id="@+id/view_patients_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Patients Doctor"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="100dp"
        android:background="#44bba4"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/patientId_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Patient Id"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/view_patients_doctor"
        tools:layout_editor_absoluteX="85dp" />

    <Button
        android:id="@+id/submitPatientId_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/patientId_editText"
        android:layout_marginLeft="148dp"
        android:background="#44bba4"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>